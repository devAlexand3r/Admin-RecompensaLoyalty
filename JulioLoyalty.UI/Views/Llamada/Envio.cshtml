@{
    ViewBag.Title = "Envío de Mensaje";
}
@Styles.Render("~/Content/bootstrapSelect/bootstrap-select.min.css")
<link href="~/Content/sweetalert2.css" rel="stylesheet" />
<div class="card hidden">
    <div class="card-header">
        <h3 class="text-center">@ViewBag.Title</h3>
    </div>
    <form id="form_envio" role="form" autocomplete="off" class="form" method="post">
        <div class="row">
            <div class="col-lg-12 required">
                <label class="control-label">Socia</label>
                <input type="text" id="participante" name="participante" class="form-control" disabled />
                <div class="dataFieldError hidden" data-valmsg-for="participante">Socia es requerida</div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 required">
                <label class="control-label">Correo Electrónico</label>
                <input type="email" id="correo" name="correo" class="form-control" placeholder="" disabled />
                <div class="dataFieldError hidden" data-valmsg-for="correo">Correo electrónico es requerido</div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 required">
                <label class="control-label">Asunto</label>
                <input type="text" id="asunto" name="asunto" class="form-control" placeholder="" />
                <div class="dataFieldError hidden" data-valmsg-for="asunto">Asunto es requerido</div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 required">
                <label class="control-label">Mensaje</label>
                <textarea id="mensaje" name="mensaje" class="form-control" rows="10"></textarea>
                <div class="dataFieldError hidden" data-valmsg-for="mensaje">Mensaje es requerido</div>
            </div>
        </div>
        <br />
        <input type="hidden" id="participante_id" />
        <div class="form-group">
            <div class="card-footer">
                <input name="enviar-submit" id="btnEnviar" class="btn btn-primary btn-block" value="Enviar" type="button">
            </div>
        </div>
    </form>
</div>
@* Modal, mensaje de envio *@
<div class="modal fade" id="mensaje" tabindex="-1" role="dialog" aria-labelledby="details" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div style="padding:.5em; font-weight:bold; color:#ff6a00" id="title"></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="table_mensaje" class="table table-bordered table-sm table-hover w-100"></table>
                </div>
            </div>
            <div class="modal-footer text-right">
                <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i> Cerrar</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/bootstrapSelect")
    @Scripts.Render("~/bundles/bootstrapDatepicker")
    @Scripts.Render("~/Scripts/sweetalert.min.js")
    @Scripts.Render("~/Scripts/Llamada/envio.js")
}