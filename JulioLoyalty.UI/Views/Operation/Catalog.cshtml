
@{
    ViewBag.Title = "Catalog";
}
@Styles.Render("~/Content/bootstrapSelect/bootstrap-select.min.css")

<div class="toolbar">
    <select id="filtro" name="filtro" data-size="10" data-title="No hay selección" data-live-search="true"></select> &nbsp;
    <button class="btn btn-primary" style="position:absolute; z-index:10;" title="Agregar registro" data-toggle="modal" data-target="#add" data-backdrop="static" data-keyboard="false"><i class="fas fa-plus"></i> Nuevo registro</button>
</div>
<table id="table_catalogo" class="table table-bordered table-sm table-hover w-100">
    <thead>
        <tr>
            <th>Clave</th>
            <th>Descripción</th>
            <th>Descripción larga</th>
            <th>Fecha</th>
            <th></th>
        </tr>
    </thead>
</table>

@* Modal, Nuevo registro *@
<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form id="formRegistro">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title custom_align" id="Heading">Nuevo registro</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row" id="contenido"></div>
                </div>
                <div class="modal-footer text-right">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i> Cancelar</button>
                    <button id="btnAgregar" type="button" class="btn btn-primary"><i class="fas fa-check-square"></i> Guardar registro</button>
                </div>
            </div>
        </form>
    </div>
</div>

@* Modal, Editar registro *@
<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form id="formRegistro">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title custom_align" id="Heading">Actualizar registro</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row" id="contenido_editar"></div>
                </div>
                <div class="modal-footer text-right">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i> Cancelar</button>
                    <button id="btnActualizar" type="button" class="btn btn-primary"><i class="fas fa-check-square"></i> Actualizar registro</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/bootstrapSelect")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/Scripts/sweetalert.min.js")
    @Scripts.Render("~/Scripts/general/mantenimiento_catalogos.js")
}



