
@{
    ViewBag.Title = "Actualizar status";
}
@Styles.Render("~/Content/bootstrapSelect/bootstrap-select.min.css")
<div style="border-bottom: 2px solid #ff6a00; padding:.5em; font-weight:bold; color:#ff6a00">ACTUALIZAR STATUS DE SOCIA</div>
<br />
<div class="table-responsive">
    <table id="table_participantes" class="table table-bordered table-sm table-hover w-100">
        <thead>
            <tr>
                <th>No. de Menbresía</th>
                <th>Nombre completo</th>
                <th>Fecha de nacimiento</th>
                <th>Correo electrónico</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@* Modal, Editar status participante *@
<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formRegistro">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title custom_align" id="Heading">Actualizar status de socia</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <select id="selPartStatus" data-size="10" data-title="No hay selección" class="form-control"></select>
                        </div>
                        <div class="col-12">
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group required">
                                <textarea rows="3" id="comentarios" name="comentarios" class="form-control" placeholder="Escribe aquí tus comentarios"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer text-right">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i> Cancelar</button>
                    <button id="btnActualizar" type="button" class="btn btn-primary"><i class="fas fa-check-square"></i> Actualizar status</button>
                </div>
            </div>
        </form>
    </div>
</div>



@section scripts{
    @Scripts.Render("~/bundles/bootstrapSelect")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/Scripts/sweetalert.min.js")
    @Scripts.Render("~/Scripts/general/actualizar_status_participante.js")
}