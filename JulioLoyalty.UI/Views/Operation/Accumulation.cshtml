
@{
    ViewBag.Title = "Registro de Ticket";
}

@Styles.Render("~/Content/bootstrapSelect/bootstrap-select.min.css")
<div class="col-md-12">
    <div class="card border-info mx-auto col-md-4">
        <div class="card-body">
            <div class="text-center">
                <h3><i class="fas fa-cart-plus fa-3x"></i></h3>
                <h3 class="text-center">Registro de Ticket</h3>
                <p class="text-info">@ViewBag.Message</p>
            </div>
            <div class="panel-body">
                <form id="form_accumulation" role="form" autocomplete="off" class="form" method="post">
                    <label>Participante</label>
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input id="fullname" placeholder="Nombre completo" class="form-control" type="text" disabled>
                    </div>
                    <label>No. Membresía</label>
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                        </div>
                        <input id="NoTarjeta" name="NoTarjeta" placeholder="No. Membresía" class="form-control" type="text" disabled>
                    </div>

                    <div class="form-group required">
                        <label class="control-label">No. Tienda</label>
                        <select class="form-control selectpicker" id="selNoTienda" name="selNoTienda"></select>
                        <div class="dataFieldError hidden" data-valmsg-for="selNoTienda">El No. Tienda es requerido</div>
                    </div>

                    <label>No. Ticket</label>
                    <div class="input-group">
                        <div class="input-group-append">
                            <div class="input-group-text"><i class="fas fa-hashtag"></i></div>
                        </div>
                        <input id="NoTicket" name="NoTicket" class="form-control" type="text">
                    </div>
                    <div class="dataFieldError hidden" data-valmsg-for="NoTicket">El número de ticket es requerido</div>
                    <br />
                    <input type="hidden" id="participante_id" />
                    <div class="form-group">
                        <input name="recover-submit" id="btnAgregar" class="btn btn-primary btn-block" value="Registrar ticket" type="button">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@* Modal, ver detalles de registro de ticket *@
<div class="modal fade" id="details" tabindex="-1" role="dialog" aria-labelledby="details" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div style="padding:.5em; font-weight:bold; color:#ff6a00" id="title"></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="table_movimientos" class="table table-bordered table-sm table-hover w-100"></table>
                </div>
            </div>
            <div class="modal-footer text-right">
                <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i> Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/bootstrapSelect")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/Scripts/sweetalert.min.js");
    @Scripts.Render("~/Scripts/general/acumulacion_activiacion_cliente.js")
}



