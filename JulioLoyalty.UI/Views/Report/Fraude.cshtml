
@{
    ViewBag.Title = "Reporte de fraude";
}

@Styles.Render(
    "~/Content/bootstrapSelect/bootstrap-select.min.css",
    "~/Content/bootstrapDatepicker/bootstrap-datepicker.min.css"
)
<link href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.bootstrap4.min.css" rel="stylesheet" />

<h2>@ViewBag.Title</h2>
<div class="form-group">
    <div class="row">
        <div class="col-lg-3 required">
            <label class="control-label">Fecha</label>
            <input type="text" id="start_date" name="start_date" class="form-control date" placeholder="" />
            <div class="dataFieldError hidden" data-valmsg-for="fec_ini">Fecha es requerido</div>
        </div>
        <div class="col-lg-3 required">
            <label class="control-label">Tipo de reporte</label>
            <select class="form-control selectpicker" id="selReportType" name="selReportType">
                <option value="1">4 Acumulaciones</option>
                <option value="2">8 Acumulaciones</option>
                <option value="3">Redenciones</option>
            </select>
        </div>
        @{
            if (User.IsInRole("Tienda"))
            {
                <input type="hidden" id="hidRole" value="9699e07c-4546-46eb-8456-4a5777c1fb77" />
            }
            else
            {
                <input type="hidden" id="hidRole" value="" />
            }
        }
        <div class="col-lg-1" style="padding-top: 2em">
            <button class="btn btn-primary" id="btnConsultar" type="button">
                <i class="fa fa-search"></i> Generar reporte
            </button>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table id="tabla_reporte_dinamico" class="table table-bordered table-sm table-hover w-100"></table>
</div>
<div class="table-responsive">
    <p id="pNotFound" style="display:none;">No se encontraron resultados</p>
</div>
@section scripts{
    @Scripts.Render("~/bundles/bootstrapSelect")
    @Scripts.Render("~/bundles/bootstrapDatepicker")
    @Scripts.Render("~/bundles/dataTables")
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js"></script>
    <script src="http://malsup.github.io/jquery.blockUI.js"></script>

    @Scripts.Render("~/Scripts/Report/reporte_fraude.min.js")
}

